<HBox fx:id="controlButtonsHBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.paintme.controllers.GameDetailsController">
   <children>
         <Button fx:id="resetButton" alignment="TOP_LEFT" onAction="#resetGameDetailsButton" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-background-radius: 100;" text="" textAlignment="CENTER" textFill="black">
               <graphic>
                     <ImageView fitHeight="25" fitWidth="25">
                           <image>
                                 <Image fx:id="resetButtonImage" url="/icons/ResetArrow.png" />
                           </image>
                     </ImageView>
               </graphic>
         </Button>
   
   <GridPane fx:id="grid" alignment="BASELINE_CENTER" gridLinesVisible="false" style="-fx-background-color: transparent" vgap="20" HBox.hgrow="ALWAYS">
   
         <children>
   
   
         <HBox fx:id="player1LoginHBox" spacing="8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0">
      <children>
                  <Label fx:id="palyer1LoginLabel" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="45.0" text="Name 1:" />
                  <TextField fx:id="player1LoginTextField" />
      </children>
         </HBox>
   
               <HBox fx:id="player2LoginHBox" spacing="8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
      <children>
      
                        <Label fx:id="player2LoginLabel" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="45.0" text="Name 2:" />
                        <TextField fx:id="player2LoginTextField" />
      </children>
               </HBox>
   
         <HBox fx:id="player1ColorHBox" spacing="13.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2">
      <children>
      
                              <Label fx:id="color1Label" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="41.0" text="Color 1:" />
                  <ColorPicker fx:id="colorPicker1" prefHeight="25.0" prefWidth="149.0" >
                      <value>
                          <Color blue="1.0" green="0.0" red="0.0" />
                      </value>
                  </ColorPicker>
      </children>
         </HBox>
   
               <HBox fx:id="player2ColorHBox" spacing="13.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3">
      <children>
      
                        <Label fx:id="color2Label" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="41.0" text="Color 2:" />
                        <ColorPicker fx:id="colorPicker2" prefHeight="25.0" prefWidth="149.0">
                            <value>
                                <Color blue="0.0" green="0.0" red="1.0" />
                            </value>
                        </ColorPicker>
      </children>
               </HBox>

             <HBox fx:id="boardTypeHBox" spacing="8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4">
        <children>
                 <Label fx:id="boardTypeLabel" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="46.0" text="Board:" />
                 <ComboBox fx:id="boardTypeComboBox" prefHeight="25.0" prefWidth="149.0">
                     <items>
                         <FXCollections fx:factory="observableArrayList">
                             <String fx:id="2Dim" fx:value="2D" />
                             <String fx:id="3Dim" fx:value="Cube" />
                         </FXCollections>
                     </items>
                     <value>
                         <String fx:value="2D" />
                     </value>
                 </ComboBox>
        </children>
             </HBox>

             <HBox fx:id="fieldHBox" spacing="8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5">
                 <children>
                     <Label fx:id="fieldLabel" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="46.0" text="Field:" />
                     <ComboBox fx:id="fieldComboBox" prefHeight="25.0" prefWidth="149.0">
                         <items>
                             <FXCollections fx:factory="observableArrayList">
                                 <String fx:id="3x3Field" fx:value="3x3" />
                                 <String fx:id="5x5Field" fx:value="5x5" />
                                 <String fx:id="9x9Field" fx:value="9x9" />
                             </FXCollections>
                         </items>
                         <value>
                             <String fx:value="3x3" />
                         </value>
                     </ComboBox>
                 </children>
             </HBox>

         <HBox fx:id="gameDifficultyHBox" spacing="5" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="6">
      <children>
      
                  <Label fx:id="difficultyLabel" alignment="BASELINE_LEFT" prefHeight="25.0" prefWidth="50.0" text="Difficulty:" />
                  <ComboBox fx:id="difficultyComboBox" prefHeight="25.0" prefWidth="149.0">
                        <items>
                              <FXCollections fx:factory="observableArrayList">
                                    <String fx:id="easyMode" fx:value="Easy" />
                                    <String fx:id="normalMode" fx:value="Normal" />
                                    <String fx:id="hardMode" fx:value="Hard" />
                                    <!--<String fx:id="immortalMode" fx:value="Immortal"/>-->
                              </FXCollections>
                        </items>
                        <value>
                              <String fx:value="Normal" />
                        </value>
                  </ComboBox>
      </children>
         </HBox>
   
         <HBox fx:id="buttonsHBox" spacing="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="7" GridPane.rowSpan="2147483647">
      <children>
      
                  <Button fx:id="backButton" alignment="CENTER" onAction="#backToMainMenuButton" prefHeight="25.0" prefWidth="70.0" text="Back" textAlignment="CENTER" HBox.hgrow="ALWAYS">
            </Button>
      
                  <Button fx:id="applyButton" alignment="CENTER" onAction="#applyGameDetailsButton" prefHeight="25.0" prefWidth="70.0" style="-fx-background-color: limegreen; -fx-font-weight: bold" text="Apply" textAlignment="CENTER" textFill="white">
            </Button>
      </children>
         </HBox>
         </children>
         <columnConstraints>
            <ColumnConstraints fillWidth="false" hgrow="ALWAYS" />
            <ColumnConstraints />
         </columnConstraints>
         <HBox.margin>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </HBox.margin>
   </GridPane>
   </children>
</HBox>
